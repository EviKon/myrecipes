<%= render 'shared/page_title', title: "#{@ingredient.name.capitalize}" %>
<% if @ingredient.recipes.count != 0 %>
  <h4 align="center">Recipe's containing <%= @ingredient.name %></h4>
  <div class="center">
    <%= will_paginate @ingredient_recipes if @ingredient_recipes %>
  </div>
  <%= render 'recipes/recipe', obj: @ingredient.recipes %>
  <div class="center">
    <%= will_paginate @ingredient_recipes if @ingredient_recipes %>
  </div>
<% else %>
  <h4 align="center">No recipes yet!</h4>
<% end %>
